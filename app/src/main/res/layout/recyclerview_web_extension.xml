<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/big_padding"
    android:orientation="horizontal">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/big_padding"
        >

        <TextView
            android:id="@+id/web_extension_title"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>

        <TextView
            android:id="@+id/web_extension_client_id"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:typeface="monospace"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <ImageView
            android:id="@+id/web_extension_unlink"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foregroundGravity="right"
            android:layout_gravity="end"
            android:paddingStart="16dp"
            android:paddingEnd="1dp"
            android:src="@drawable/baseline_phonelink_off_24"
            android:focusable="true" />

        <ImageView
            android:id="@+id/web_extension_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foregroundGravity="right"
            android:layout_gravity="end"
            android:paddingStart="16dp"
            android:paddingEnd="1dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:focusable="true" />
    </TableRow>
</TableLayout>