<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.importvault.ImportVaultActivity">


    <TextView
        android:id="@+id/import_vault_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_vault_explanation"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/button_load_vault"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_load_vault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_load_vault"
        android:background="@color/colorAccent"
        android:textColor="@color/buttonLabel"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/import_vault_explanation" />


</androidx.constraintlayout.widget.ConstraintLayout>